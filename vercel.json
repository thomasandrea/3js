{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/projects/bitmama/(.*)", "dest": "/projects/bitmama/$1" },
    { "src": "/projects/morphing/(.*)", "dest": "/projects/morphing/$1" },
    { "src": "/projects/ig/(.*)", "dest": "/projects/ig/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
